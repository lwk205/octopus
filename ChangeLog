	  testsuite/finite_systems_1d/02-neon_mpi.05-casida.inp,
	  testsuite/finite_systems_1d/02-neon_mpi.test,
	  testsuite/finite_systems_1d/03-neon.01-gs.inp,
	  testsuite/finite_systems_1d/03-neon.02-unocc.inp,
