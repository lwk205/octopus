# -*- coding: utf-8 mode: shell-script -*-

Test       : Dressed RDMFT
Program    : octopus
TestGroups : short-run, functionals
Enabled    : Yes


Input: 16-dressed-rdmft.01-ip.inp
match ; SCF convergence               ; GREPCOUNT(static/info, 'SCF converged') ; 1
match ; IP energy                    ; GREPFIELD(static/info, 'Total       =', 3) ; -1.58545076
match ; IP eigenvalue                ; GREPFIELD(static/info, '  1   --', 3) ; -0.792725

Input: 16-dressed-rdmft.02-hf.inp
Precision: 0.001
match ; SCF convergence                  ; GREPCOUNT(static/info, 'SCF converged') ; 1
match ; dHF converged energy           ; GREPFIELD(static/info, 'Total Energy ', 4) ; -7.8054701441E-01
match ; dHF total mode occupation  ; GREPFIELD(static/info, 'Total mode occupation', 4) ; 1.066682135547

Input: 16-dressed-rdmft.03-rdmft.inp
Precision: 0.001
match ; SCF convergence                  ; GREPCOUNT(static/info, 'SCF converged') ; 1
Precision: 0.005
match ; dRDMFT converged energy          ; GREPFIELD(static/info, 'Total Energy ', 4) ; -0.890756973365
Precision: 0.01
match ; dRDMFT highest occupation number ; GREPFIELD(static/info, '1 ', 2) ; 1.9282295705235
Precision: 0.007
match ; dRDMFT total mode occupation     ; GREPFIELD(static/info, 'Total mode occupation', 4) ; 1.079263282593
