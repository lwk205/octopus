# -*- coding: utf-8 mode: shell-script -*-

Test       : Magnons with generalized Bloch theorem
Program    : octopus
TestGroups : long-run, periodic_systems
Enabled    : Yes

Processors : 4

Input      : 19-magnon.01-gs.inp

match ; SCF convergence ; GREPCOUNT(static/info, 'SCF converged') ; 1

match ; Total energy       ; GREPFIELD(static/info, 'Total       =', 3) ; -125.90956269
match ; Ion-ion energy     ; GREPFIELD(static/info, 'Ion-ion     =', 3) ; -78.31680646
match ; Eigenvalues sum    ; GREPFIELD(static/info, 'Eigenvalues =', 3) ; -15.10249928
match ; Hartree energy     ; GREPFIELD(static/info, 'Hartree     =', 3) ;  32.73781833
match ; Exchange energy    ; GREPFIELD(static/info, 'Exchange    =', 3) ; -16.53334405
match ; Correlation energy ; GREPFIELD(static/info, 'Correlation =', 3) ; -1.35405090
match ; Kinetic energy     ; GREPFIELD(static/info, 'Kinetic     =', 3) ;  60.03937417
match ; External energy    ; GREPFIELD(static/info, 'External    =', 3) ; -122.48255328

match ; k-point 2 (x)  ; GREPFIELD(static/info, '#k =   2', 7) ;   0.000000
match ; k-point 2 (y)  ; GREPFIELD(static/info, '#k =   2', 8) ;   0.500000
match ; k-point 2 (z)  ; GREPFIELD(static/info, '#k =   2', 9) ;   0.000000
match ; Eigenvalue  1  ; GREPFIELD(static/info, '#k =   2', 3, 1) ; -2.914251
match ; Eigenvalue  2  ; GREPFIELD(static/info, '#k =   2', 3, 2) ; -2.794832
match ; Eigenvalue  3  ; GREPFIELD(static/info, '#k =   2', 3, 3) ; -1.721382
match ; Eigenvalue  4  ; GREPFIELD(static/info, '#k =   2', 3, 5) ; -1.704599

Input      : 19-magnon.02-td.inp

match ; Transverse magnet. [step  49] ; LINEFIELD(td.general/transverse_magnetization, -2, 3) ; 3.405129110746e-02
match ; Transverse magnet. [step  49] ; LINEFIELD(td.general/transverse_magnetization, -2, 4) ; -1.406392185262e-02
match ; Transverse magnet. [step  50] ; LINEFIELD(td.general/transverse_magnetization, -1, 3) ; 3.380744782462e-02
match ; Transverse magnet. [step  50] ; LINEFIELD(td.general/transverse_magnetization, -1, 4) ; -1.603367446758e-02

Util : oct-spin_susceptibility
Input : 19-magnon.02-td.inp

match ; Spin susceptibilty Re [omega=2.7eV] ; LINEFIELD(td.general/spin_susceptibility, 30, 2) ; 0.843966E+01
match ; Spin susceptibilty Im [omega=2.7eV] ; LINEFIELD(td.general/spin_susceptibility, 30, 3) ; 0.230122E+00

